<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farmacosjava">

    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- MAKE ALARMS RESTART ON REBOOT -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmacosJava">
        <activity
            android:name=".ActivityAlarmTest"
            android:exported="false" />
        <activity
            android:name=".PatientMedicinesPatientView"
            android:exported="false" />
        <activity
            android:name=".NewMedicineForPacient"
            android:exported="false" />
        <activity
            android:name=".NewPacient"
            android:exported="false" />
        <activity
            android:name=".PatientMedicinesDoctorView"
            android:exported="false" />
        <activity
            android:name=".DoctorPacientListActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.doctorActivity.healthInstitutionActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.doctorActivity.specialityRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.PasswordRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.PatientActivity.treatmentPlaceRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.PatientActivity.directionRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.PatientActivity.birthdateRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.PatientActivity.genreActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.nameRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".registerActivities.typerRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".Alarm.AlarmReceiver"
            android:enabled="true" />

        <service
            android:name=".Alarm.NotificationService"
            android:enabled="true" />
    </application>

</manifest>